# -*- mode: yaml -*-

manifest:
  version: 1.0

comment_text: {{ source.diff.files | summarizeUnitTests(testsDirectory="/", testsExtension=".md", fileTypes=[".md"]) }}

automations:
  checklist: 
    if:
      - {{ comment_text }}
    run:
      - action: add-comment@v1
        args:
          comment: {{ comment_text }}
